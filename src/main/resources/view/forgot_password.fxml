<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ForgotPasswordController"
            prefWidth="400" prefHeight="500">

    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <Label text="Forgot Password" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <Label text="Enter your email or username:"/>
        <TextField fx:id="txtEmailOrUsername" promptText="Email or Username" maxWidth="250"/>

        <Button fx:id="btnSendOTP" text="Send OTP"  maxWidth="150"/>

        <Label text="Enter OTP sent to your email:"/>
        <TextField fx:id="txtOTP" promptText="OTP Code" maxWidth="150"/>

        <Label text="New Password:"/>
        <PasswordField fx:id="txtNewPassword" promptText="Enter new password" maxWidth="250"/>

        <Label text="Confirm Password:"/>
        <PasswordField fx:id="txtConfirmPassword" promptText="Confirm new password" maxWidth="250"/>

        <Button fx:id="btnResetPassword" text="Reset Password"  maxWidth="200"/>

        <Hyperlink  fx:id="linktoBack" text="Back to Login" onAction="#back"/>

    </VBox>
</AnchorPane>
